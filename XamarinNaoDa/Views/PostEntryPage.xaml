<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinNaoDa.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Media Picker Sample!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button Text="Pick Image" Clicked="PickImageClicked" />
        <Button Text="Take Image" Clicked="TakeImageClicked"/>
        <Button Text="Add to Database"
                Clicked="AddToDatabaseClicked"/>
        <Editor x:Name="comentarioEntry"
                Placeholder="Legenda"
                Text="{Binding Comentario}"
                HeightRequest="75" />
        <Image x:Name="resultImage" 
               Source="{Binding Foto}" 
               HeightRequest="75" />
        <Grid>
            <Button Text="Delete" Clicked="OnDeleteButtonClicked"/>
        </Grid>
    </StackLayout>
</ContentPage>
